<h3>ðŸ”® <%= l(:label_sprint_backlog_suggestions) %></h3>
<table class="list issues-table">
  <thead>
    <tr>
      <th></th>
      <th>#</th>
      <th><%= l(:field_subject) %></th>
      <th><%= l(:field_status) %></th>
      <th><%= l(:field_assigned_to) %></th>
      <th><%= l(:field_story_points) %></th>
    </tr>
  </thead>
  <tbody>
    <% Sprint.smart_backlog_candidates(@project).each do |issue| %>
      <tr>
      <td><%= check_box_tag "issue_ids[]", issue.id %></td>
        <td><%= link_to issue.id, issue_path(issue) %></td>
        <td><%= link_to issue.subject, issue_path(issue) %></td>
        <td><%= issue.status.name %></td>
        <td><%= issue.assigned_to&.name || l(:label_board_issue_unassigned) %></td>
        <td><%= issue.story_points || 0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  function toggleSuggestions() {
    const box = document.getElementById('suggestion-box');
    if (box.style.display === 'none' || box.style.display === '') {
      box.style.display = 'block';
    } else {
      box.style.display = 'none';
    }
  }
</script>