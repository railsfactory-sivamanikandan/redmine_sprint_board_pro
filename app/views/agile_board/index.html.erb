<%= javascript_include_tag 'agile_board', plugin: 'redmine_sprint_board_pro' %>
<%= javascript_include_tag 'agile_filters', plugin: 'redmine_sprint_board_pro' %>
<%= javascript_include_tag 'spillover', plugin: 'redmine_sprint_board_pro' %>